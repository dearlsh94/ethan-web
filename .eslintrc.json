{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "graphql": false
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "import"],
  "extends": ["plugin:import/recommended"],
  "rules": {
    "react/jsx-sort-props": [
      "warn",
      {
        "ignoreCase": true,
        "reservedFirst": true,
        "callbacksLast": true,
        "shorthandLast": true
      }
    ],
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", ["parent", "sibling", "index"], "type", "unknown"],
        "pathGroups": [
          {
            "pattern": "{gatsby*, gatsby*/**}",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "{react*, react*/**}",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@src",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@pages",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@layout",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@module",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@components",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@services",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@store",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@hooks",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@utils",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@types",
            "group": "type"
          },
          {
            "pattern": "@scss",
            "group": "unknown"
          },
          {
            "pattern": "@images",
            "group": "unknown"
          }
        ],
        "distinctGroup": false,
        "pathGroupsExcludedImportTypes": [],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": false
        },
        "newlines-between": "always"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    }
  ],
  "settings": {
    "import/resolver": {
      "webpack": {},
      "typescript": {}
    }
  }
}
